Name:           libffi-<%= version %>
Version:        <%= version %>
%define prefix_path /app/vendor/libffi-%{version}
Release:        1
Summary: This is the libffi binary used in buildpacks in SUSE CloudFoundry (SCF)
License:        MIT
Group:          Cloud/Platform/scf
Url:            https://sourceware.org/libffi/
Source0:        <%= source %>
Source1:        libffi-3.1-toolexeclibdir.patch
Source2:        sources.yml
BuildRoot:      %{_tmppath}/%{name}-build

<%= rpm_macros %>

%description

%prep
%setup -q -n %{name}
patch -p1 < %{SOURCE1}

%build
./configure --prefix=%{prefix_path} --enable-static
make

%install
export DESTDIR=/tmp/%{name}/
export APP_PATH=${DESTDIR}%{prefix_path}

mkdir -p ${DESTDIR}
make install DESTDIR=${DESTDIR}

TARBALL=%{otherdir}/%{name}-linux-x64.tgz
tar -C ${APP_PATH} -czvf ${TARBALL} . --owner=0 --group=0

CHECKSUM=`sha256sum ${TARBALL}`
NEW_TARBALL=%{otherdir}/%{name}-linux-x64-%{stack}-${CHECKSUM:0:8}.tgz
mv ${TARBALL} ${NEW_TARBALL}

echo `sha256sum ${NEW_TARBALL}` > %{otherdir}/$(basename ${NEW_TARBALL}).sha256

%post
%postun

%files
%defattr(-,root,root)

%changelog

Name:           node-<%= version %>
Version:        <%= version %>
Release:        1
Summary: This is the node binary used in buildpacks in SUSE CloudFoundry (SCF)
License:        MIT
Group:          Cloud/Platform/scf
Url:            https://nodejs.org/
Source0:        <%= source %>
Source1:        sources.yml
BuildRequires:  python
BuildRequires:  gcc-c++
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n node-v%{version}

%build
python configure --prefix=/

%install
DESTDIR=/tmp/%{name}/%{name}-v%{version}-linux-x64
mkdir -p ${DESTDIR}
cp %{SOURCE1} /tmp/

make install %{?_smp_mflags} DESTDIR=${DESTDIR} PORTABLE=1

TARBALL=/home/abuild/rpmbuild/OTHER/%{name}-linux-x64.tgz
tar czvf ${TARBALL} -C /tmp/%{name} . --owner=0 --group=0
CHECKSUM=`sha256sum ${TARBALL}`
echo $CHECKSUM > /home/abuild/rpmbuild/OTHER/%{name}-linux-x64-${CHECKSUM:0:8}.sha256
mv ${TARBALL} /home/abuild/rpmbuild/OTHER/%{name}-linux-x64-${CHECKSUM:0:8}.tgz

%post
%postun

%files
%defattr(-,root,root)

%changelog


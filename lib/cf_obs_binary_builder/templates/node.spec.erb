Name:           node
Version:        <%= version %>
Release:        1
%define mod_name %{name}
%define mod_full_name %{mod_name}-%{version}
Summary: This is the node binary used in buildpacks in SUSE CloudFoundry (SCF)
License:        MIT
Group:          Cloud/Platform/scf
Url:            https://nodejs.org/
Source:         <%= source %>
BuildRequires:  python
BuildRequires:  gcc-c++
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n %{name}-v%{version}

%build
python configure --prefix=/

%install
make install DESTDIR=%{_builddir} PORTABLE=1

cd %{_builddir}
tar czvf /home/abuild/rpmbuild/OTHER/%{mod_full_name}.tgz . --owner=0 --group=0

%post
%postun

%files
%defattr(-,root,root)

%changelog


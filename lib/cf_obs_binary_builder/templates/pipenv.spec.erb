Name:           pipenv-<%= version %>
Version:        <%= version %>
Release:        1
Summary:        This is a dependency used in SUSE CAP buildpacks
License:        MIT
Group:          Cloud/Platform/scf
Url:            https://github.com/pypa/pipenv
Source0:        <%= source %>
Source1:        sources.yml
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%define destdir /tmp/%{name}

<%= rpm_macros %>

%description

%prep
mkdir -p %{destdir}
cp %{_sourcedir}/*.zip  %{_sourcedir}/*.tar.gz %{destdir}/

%build
TARBALL=%{otherdir}/%{name}-linux-x64.tgz

pushd %{destdir}
tar czf ${TARBALL} * --owner=0 --group=0
popd

CHECKSUM=`sha256sum ${TARBALL}`
NEW_TARBALL=%{otherdir}/%{name}-linux-amd64-%{stack}-${CHECKSUM:0:8}.tgz
mv ${TARBALL} ${NEW_TARBALL}

echo `sha256sum ${NEW_TARBALL}` > %{otherdir}/$(basename ${NEW_TARBALL}).sha256

%files
%defattr(-,root,root)

%changelog


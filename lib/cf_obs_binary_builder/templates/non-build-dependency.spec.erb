Name:           <%= dependency %>-<%= version %>
Version:        <%= version %>
Release:        1
License:        <%= license %>
Group:          Cloud/Platform/scf
Summary:        Automatic build of <%= dependency %> for the use in buildpacks in SCF
Url:            <%= url %>
Source:         <%= source %>
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep

%build

%install
TARBALL=/home/abuild/rpmbuild/OTHER/%{name}.tgz
cp %{SOURCE0} ${TARBALL}

CHECKSUM=`sha256sum ${TARBALL}`
echo $CHECKSUM > /home/abuild/rpmbuild/OTHER/$(basename $TARBALL).sha256

mv ${TARBALL} /home/abuild/rpmbuild/OTHER/%{name}-${CHECKSUM:0:8}.tgz

%post
%postun

%files
%defattr(-,root,root)

%changelog


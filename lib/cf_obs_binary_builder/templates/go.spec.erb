Name:           go-<%= version %>
Version:        <%= version %>
Release:        1
Summary:        This is a dependency used in SUSE CAP buildpacks
License:        BSD-3-Clause
Group:          Cloud/Platform/scf
Url:            http://golang.org
Source0:        <%= source %>
Source1:        sources.yml
BuildRequires:  go1.4
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n go/src

%build
export GOROOT_BOOTSTRAP=/usr/lib64/go1.4
./make.bash

%install
cp %{SOURCE1} ../../

TARBALL=/home/abuild/rpmbuild/OTHER/%{name}-linux-amd64.tgz
tar czf ${TARBALL} -C ../../ go sources.yml --owner=0 --group=0

CHECKSUM=`sha256sum ${TARBALL}`
NEW_TARBALL=/home/abuild/rpmbuild/OTHER/%{name}-linux-amd64-${CHECKSUM:0:8}.tgz
mv ${TARBALL} ${NEW_TARBALL}

echo `sha256sum ${NEW_TARBALL}` > /home/abuild/rpmbuild/OTHER/$(basename ${NEW_TARBALL}).sha256

%files
%defattr(-,root,root)

%changelog


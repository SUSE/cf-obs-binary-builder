Name:           go-<%= version %>
Version:        <%= version %>
Release:        1
Summary: This is the go binary used in buildpacks in SUSE CAP
License:        BSD-3-Clause
Group:          Cloud/Platform/scf
Url:            http://golang.org
Source0:        <%= source %>
Source1:        sources.yml
BuildRequires:  go1.4
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n go/src

%build
./make.bash

%install
cp %{SOURCE1} ../../
TARBALL=/home/abuild/rpmbuild/OTHER/%{name}.tgz
tar czf ${TARBALL} -C ../../ go sources.yml --owner=0 --group=0
CHECKSUM=`sha256sum ${TARBALL} | cut -d' ' -f1`
mv ${TARBALL} /home/abuild/rpmbuild/OTHER/%{name}-linux-amd64-${CHECKSUM:0:8}.tgz

%files
%defattr(-,root,root)

%changelog


Name:           ruby-buildpack
Version:        <%= version %>
Release:        1
Summary:        Cloud Foundry buildpack for Ruby, Sinatra and Rails
License:        Apache-2.0
Group:          Cloud/Platform/scf
Url:            https://github.com/SUSE/cf-ruby-buildpack
Source:         https://github.com/SUSE/cf-ruby-buildpack/archive/v%{version}.tar.gz
BuildRequires: go
<% dependencies = manifest.dependencies.first
<% dependencies.each do |dependency| %>
BuildRequires: <%= dependency.package_name %>
<% end %>
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n cf-%{name}-%{version}

%build
source ./.envrc
(cd src/ruby/vendor/github.com/cloudfoundry/libbuildpack/packager/buildpack-packager && go install)
buildpack-packager build -any-stack

%install
CHECKSUM=`sha1sum ruby_buildpack-v%{version}.zip | cut -d' ' -f1`
mv ruby_buildpack-v%{version}.zip /home/abuild/rpmbuild/OTHER/ruby_buildpack-v%{version}-${CHECKSUM:0:8}.zip

%post
%postun

%files
%defattr(-,root,root)

%changelog


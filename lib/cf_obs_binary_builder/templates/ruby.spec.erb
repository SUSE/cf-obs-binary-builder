Name:           ruby-<%= version %>
Version:        <%= version %>
Release:        1
%define prefix_path /app/vendor/ruby-%{version}
Summary: This is the ruby binary used in buildpacks in SUSE CloudFoundry (SCF)
License:        Ruby
Group:          Cloud/Platform/scf
Url:            https://rubyjs.org/
Source0:        <%= source %>
Source1:        sources.yml
BuildRequires:  gcc
BuildRequires:  openssl-devel
BuildRequires:  graphviz
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n ruby-%{version}

%build
./configure --enable-load-relative --disable-install-doc debugflags=-g --prefix=%{prefix_path} --without-gmp
make %{?_smp_mflags}

%install
export DESTDIR=/tmp/%{name}/
export APP_PATH=${DESTDIR}%{prefix_path}

mkdir -p ${DESTDIR}
make install DESTDIR=${DESTDIR}
cp %{SOURCE1} ${APP_PATH}

tar czf /home/abuild/rpmbuild/OTHER/%{name}.tgz -C ${APP_PATH} . --owner=0 --group=0

%post
%postun

%files
%defattr(-,root,root)

%changelog


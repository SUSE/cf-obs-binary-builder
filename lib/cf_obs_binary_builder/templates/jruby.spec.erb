Name:           <%= dependency %>-<%= jruby_version %>
Version:        <%= jruby_version %>
Release:        1
%define mod_name %{name}
%define mod_full_name %{mod_name}-%{version}
%define destdir %{_builddir}/%{mod_full_name}
Summary: This is the <%= dependency %> binary used in buildpacks in SUSE CloudFoundry (SCF)
License:        Ruby
Group:          Cloud/Platform/scf
Url:            http://jruby.org
Source0:        <%= source %>
Source1:        sources.yml
Source2:        jruby-kit.tar.xz
BuildRequires:  maven
BuildRequires:  java-1_8_0-openjdk-devel
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
%setup -q -n jruby-<%= jruby_version %>
tar xfv %{SOURCE2}

%build
mkdir -p %{destdir}
cp %{SOURCE1} %{destdir}

mvn -P '!truffle' -Djruby.default.ruby.version=<%= ruby_version %> \
  -Dmaven.repo.local=kit/m2 \
  --settings kit/m2/settings.xml \

%install
tar czvf /home/abuild/rpmbuild/OTHER/%{mod_full_name}.tgz -C %{destdir} bin/ lib/ sources.yml --owner=0 --group=0

%post
%postun

%files
%defattr(-,root,root)

%changelog


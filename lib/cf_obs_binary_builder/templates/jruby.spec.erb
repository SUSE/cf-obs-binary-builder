Name:           <%= dependency %>-<%= jruby_version %>_ruby<%= ruby_version %>
Version:        <%= jruby_version %>_ruby<%= ruby_version %>
Release:        1
%define destdir %{_builddir}/jruby-<%= jruby_version %>
Summary: This is the <%= dependency %> binary used in buildpacks in SUSE CloudFoundry (SCF)
License:        Ruby
Group:          Cloud/Platform/scf
Url:            http://jruby.org
Source0:        <%= source %>
Source1:        cacerts.pem
Source2:        jruby-kit.tar.xz
Source3:        sources.yml
BuildRequires:  maven
BuildRequires:  java-1_8_0-openjdk-devel
BuildRoot:      %{_tmppath}/%{name}-%{version}-build

%description

%prep
# Set up keystore
mkdir -p cacerts
awk '/-----BEGIN CERTIFICATE-----/,/-----END CERTIFICATE-----/{ print $0; }' %{SOURCE1} | csplit -n 3 -s -f cacerts/ - '/-----BEGIN CERTIFICATE-----/' {*}
rm cacerts/000

for PEM in $(find cacerts -type f | sort); do
  keytool -importcert -noprompt -keystore cacerts.jks -storepass changeit -file $PEM -alias $(basename $PEM)
done

%setup -q -n jruby-<%= jruby_version %>
tar xfv %{SOURCE2}

%build
mkdir -p %{destdir}
cp %{SOURCE3} %{destdir}

mvn -P '!truffle' -Djruby.default.ruby.version=<%= ruby_version %> \
  -Dmaven.repo.local=kit/m2 \
  --settings kit/m2/settings.xml \

%install
TARBALL=/home/abuild/rpmbuild/OTHER/jruby-%{version}.tgz
tar czvf ${TARBALL} -C %{destdir} bin/ lib/ sources.yml --owner=0 --group=0
CHECKSUM=`sha256sum ${TARBALL}`
echo $CHECKSUM > /home/abuild/rpmbuild/OTHER/$(basename $TARBALL).sha256
mv ${TARBALL} /home/abuild/rpmbuild/OTHER/jruby-%{version}-${CHECKSUM:0:8}.tgz

%post
%postun

%files
%defattr(-,root,root)

%changelog

